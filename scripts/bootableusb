#!/usr/bin/env bash

##############################################
#	Author: Nidia Achrys
#	Project: bootableusb
#	Version: 1.0
# 
#	Usage: bootableusb <iso> /path/to/drive
# 
#	Description:
#		Create a bootable USB drive from an
#		ISO file 
##############################################

PRINT ()
{
	printf "%b\n" "${@}"
}

bootableusb.write ()
{
	sudo dd bs=4M if="$1" of="$2" conv=fdatasync
}

if [[ "$1" = "--help" ]] || [[ $# -lt 1 ]]
then
	PRINT "usage: bootableusb <iso> <drive>"
else
	bootableusb.write "$1" "$2"
fi
