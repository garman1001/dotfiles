#!/usr/bin/env bash

##############################################
#   Author: Roy Conn
#   Project: rmscript
#   Version: 1.0
#
#   Usage: rmscript <name>
#
#   Description:
#		Delete existing scripts
##############################################

PRINT()
{
	printf "%b\n" "$@"
}

# Check if running as root
if [[ $EUID -eq 0 ]]; then

	PROGRAM_NAME="$(basename "$0")"

	PRINT "'${PROGRAM_NAME}' should not be run as root. Please try again as a normal user."
	exit 1
fi

# Variables
SCRIPTS="${SCRIPTS:-$HOME/.local/bin}"
FILE="${SCRIPTS}/${1}"

# Check if script name was passed
[[ $# -lt 1 ]] && PRINT "You must provide a script name!" && exit 1

# Check if script exists
[[ ! -f "${FILE}" ]] && PRINT "Script '${1}' does not exist!" && exit 1

# Confirm deletion of the script
read -r -p "Are you sure you want to delete this script (y/N)? " confirm

if [[ $confirm =~ ^[yY][eE]?[sS]?$ ]]; then

	# Edit script
	rm -f "${FILE}"
	
	PRINT
	PRINT "Deleted '${1}'."

else

	PRINT "Cancelled."

fi

# Exit
exit 0
