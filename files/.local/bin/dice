#!/usr/bin/env python3

import random
import sys

# Variables
args = sys.argv
nums = []
minoutput = False


def randomNumber(max=100):
    return random.randint(1, int(max))


def roll_dice(number=20):

    result = randomNumber(int(number))

    if minoutput is False:
        print(f"d{number}: {result}")
    else:
        print(f"{result}")


if __name__ == "__main__":

    for arg in args:

        if arg == '-r' or arg == '--raw':

            minoutput = True
            continue

        if arg.isdigit():

            nums.append(int(arg))
            continue

    for num in nums:
        roll_dice(num)
